@{
    ViewData["Title"] = "Hesapçı";
}
<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
        overflow: hidden;
    }

    .calculator {
        width: 300px;
        margin: 100px auto;
        background-color: #ffffff;
        border: 1px solid #d1d1d1;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .display {
        font-size: 24px;
        text-align: right;
        margin-bottom: 10px;
        width: 100%;
        box-sizing: border-box;
        padding: 10px;
    }

    .buttons {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
    }

    .button {
        padding: 10px;
        font-size: 20px;
        text-align: center;
        background-color: #f0f0f0;
        border: 1px solid #d1d1d1;
        border-radius: 5px;
        cursor: pointer;
    }

        .button:hover {
            background-color: #e0e0e0;
        }
</style>

<div class="calculator">
    <input class="display" id="sonucLabel"></input>
    <div class="buttons">
        <div class="button" id="percent">%</div>
        <div class="button" id="cl">AC</div>
        <div class="button" id="clear">C</div>
        <div class="button" id="remove"><</div>
        <div class="button" id="7">7</div>
        <div class="button" id="8">8</div>
        <div class="button" id="9">9</div>
        <div class="button" id="divide">/</div>
        <div class="button" id="4">4</div>
        <div class="button" id="5">5</div>
        <div class="button" id="6">6</div>
        <div class="button" id="multi">*</div>
        <div class="button" id="1">1</div>
        <div class="button" id="2">2</div>
        <div class="button" id="3">3</div>
        <div class="button" id="subs">-</div>
        <div class="button" id="0">0</div>
        <div class="button" id="dot">.</div>
        <div class="button" id="btnSonuc">=</div>
        <div class="button" id="add">+</div>
    </div>
</div>
@section Scripts{
    <script src="~/js/test.js"></script>
}
